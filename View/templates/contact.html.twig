                <div class="input-group">
                <select name="themes" id="themes" class="selectpicker" multiple>
                    <option value="Réserver une carcasse">Réserver une carcasse</option>
                    <option value="Réserver un cochon vivant">Réserver un cochon vivant</option>
                    <option value="Vous vendre un cochon">Vous vendre un cochon</option>
                    <option value="Autres">Autres</option>
                </select><br/>
                </div>
                <div class="input-group">
                <textarea name="message" id="message" placeholder="Saisissez ici votre message" cols="100"></textarea>
                </div>
                <a class="btn btn-info" onClick="formulaireContact()" role="button">Envoyer !</a>
            </form>
        </div>
    </div>
</div>
{%endblock%}